#!/usr/bin/env ruby -w
$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)

require 'tictactoe/game_setup'
require 'tictactoe-ui/ttt'
require 'tictactoe/ai/minimax_ai'

ui = ConsoleTTT::Ui::ConsoleUi.new
ai = TicTacToe::Ai::MinimaxAi.new
game_setup = TicTacToe::GameSetup.new(ui, ai)

ConsoleTTT::TTT.new(ui, game_setup).run
